{% extends 'base.html.twig' %}

{% block title %}{{ FormName }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ FormName }}</h1>
    {{ form_start(contactForm) }}
    {{ form_row(contactForm.firstName, {label: 'Prenom'}) }}
    {{ form_row(contactForm.lastName, {label: "Nom"}) }}
    {{ form_row(contactForm.phone, {label: "Téléphone"}) }}
    {{ form_row(contactForm.email) }}
    {{ form_row(contactForm.note, {
        label: 'Note'
    }) }}
    {{ form_row(contactForm.category, {
        label: 'Categorie'
    }) }}
    {{ form_end(contactForm) }}

</div>
{% endblock %}
